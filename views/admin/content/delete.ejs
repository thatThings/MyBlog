<%- include('../layout')%>

<div class="am-g bdfw_nr">
    <ol class="am-breadcrumb bdfw_link">
        <li><a href="/admin/content">内容首页</a></li>
        <li class="am-active">内容删除</li>
    </ol>
    <!-- form  表单如果不写action 则默认提交方式是  不改变当前地址 -->
    <form class="am-form"  method="post" style="background:#ffffff;">
        <fieldset>
            <legend>所属分类 - <%= result.category.name %></legend>
            <div class="am-form-group">
                <label for="doc-ipt-email-1">标题名称</label>
                <input type="text" name="title" class="" id="doc-ipt-email-1" value="<%= result.title %>">
            </div>
            <p><button type="submit" class="am-btn am-btn-default">点击删除内容</button></p>
        </fieldset>
    </form>
</div>


