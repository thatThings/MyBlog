<%- include('../layout')%>

<div class="am-g bdfw_nr" >
    <ol class="am-breadcrumb bdfw_link">
        <li><a href="/admin/content">内容首页</a></li>
        <li class="am-active">内容添加</li>
    </ol>
    <form class="am-form" method="post" style="background:#ffffff">
        <fieldset>
            <legend><div class="bdfw_nr_title">内容添加</div></legend>
            <div class="am-form-group">
                <label for="doc-select-1">分类</label>
                <select name="category" id="doc-select-1">
                <% for(let i=0;i<results.length;i++){ %>
                   <option value="<%= results[i]._id %>"><%= results[i].name %></option>
                <% } %>
                </select>
                <span class="am-form-caret"></span>
            </div>

            <div class="am-form-group">
                <label for="doc-ipt-email-1">标题：</label>
                <input type="text" name="title" class="" id="doc-ipt-email-1" placeholder="请输入标题">
            </div>

            <div class="am-form-group">
                <label for="doc-ta-1">简介：</label>
                <textarea class="" name="description" rows="5" id="doc-ta-1" placeholder="请输入简介"></textarea>
            </div>

            <div class="am-form-group">
                <label for="doc-ta-1">内容：</label>
                <textarea class="" name="content" rows="10" id="doc-ta-1" placeholder="请输入内容"></textarea>
            </div>

            <p><button type="submit" class="am-btn am-btn-default">点击添加内容</button></p>
        </fieldset>
    </form>
</div>


<%- include('../footer') %>